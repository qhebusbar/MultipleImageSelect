<resources>
    <style name="MultipleImageSelectTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/multiple_image_select_primary</item>
        <item name="android:colorPrimaryDark">@color/multiple_image_select_primaryDark</item>
        <item name="android:colorAccent">@color/multiple_image_select_accent</item>

        <item name="android:actionModeStyle">@style/CustomActionModeStyle</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="CustomActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="android:background">@color/multiple_image_select_primary</item>
    </style>

    <style name="CustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/multiple_image_select_toolbarPrimaryText</item>
    </style>
</resources>
